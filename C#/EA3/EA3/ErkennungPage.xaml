<Page
    x:Class="EA3.ErkennungPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:EA3"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" Height="500" Width="800">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
		<StackPanel Margin="50,50,50,50">
			<TextBlock x:Name="FirstLineText" Text="TextBlock"/>

			<StackPanel Height="300" Margin="50,50,50,50">
				<StackPanel Height="94" Margin="0,0,0,0">
				</StackPanel>
				<StackPanel>
					<TextBlock x:Name="TextBlockFrage" Text="Frage" Padding="0,0,0,0" Margin="0,0,0,0"/>
					<TextBlock Text="" Padding="0,0,0,0" Margin="0,0,0,0"/>
					<StackPanel Height="75" Margin="90,0,0,0">
						<TextBlock Text="K - M - L - K - L" />
						<Button Content="Kurz"  />
						<Button Content="Mittel"  Margin="100,-32,0,0"/>
						<Button Content="Lang" Margin="200,-32,0,0"/>
					</StackPanel>
				</StackPanel>
			</StackPanel>
		</StackPanel>
	</Grid>
</Page>
